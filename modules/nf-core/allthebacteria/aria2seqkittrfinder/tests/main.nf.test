nextflow_process {

    name "Test Process ALLTHEBACTERIA_ARIA2SEQKITTRFINDER"
    script "../main.nf"
    process "ALLTHEBACTERIA_ARIA2SEQKITTRFINDER"

    tag "modules"
    tag "modules_nfcore"
    tag "allthebacteria"
    tag "allthebacteria/aria2seqkittrfinder"

    test("atb.assembly.incr_release.202408.batch.1.tar.xz") {
        when {
            process {
                """
                input[0] = [
                    [ id:'atb.assembly.incr_release.202408.batch.1.tar.xz' ], // meta map
                    [
                        "https://osf.io/download/bfeqh/"
                    ]
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("atb.assembly.incr_release.202408.batch.1.tar.xz - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'achromobacter_xylosoxidans__01' ], // meta map
                    [
                        "https://osf.io/download/bfeqh/"
                    ]
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
