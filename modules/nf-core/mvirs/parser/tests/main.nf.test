nextflow_process {

    name "Test Process MVIRS_PARSER"
    script "../main.nf"
    process "MVIRS_PARSER"

    tag "modules"
    tag "modules_nfcore"
    tag "mvirs"
    tag "mvirs/index"
    tag "mvirs/oprs"
    tag "mvirs/parser"

    test("fasta.gz + integrases.hmm") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/test1.contigs.fasta.gz", checkIfExists: true)
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/test1.mvirs.provirus.fasta.gz", checkIfExists: true)
                ]
                input[2] = [
                    [ id: 'test' ],
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/hmmsearch/test.hmmsearch", checkIfExists: true)
                ]
                input[3] = [
                    [ id: 'test' ],
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/test1.faa.gz", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/test1.contigs.fasta.gz", checkIfExists: true)
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/test1.mvirs.provirus.fasta.gz", checkIfExists: true)
                ]
                input[2] = [
                    [ id: 'test' ],
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/hmmsearch/test.hmmsearch", checkIfExists: true)
                ]
                input[3] = [
                    [ id: 'test' ],
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/test1.faa.gz", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
