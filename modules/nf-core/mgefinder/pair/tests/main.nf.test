nextflow_process {

    name "Test Process MGEFINDER_PAIR"
    script "../main.nf"
    process "MGEFINDER_PAIR"

    tag "modules"
    tag "modules_nfcore"
    tag "mgefinder"
    tag "mgefinder/pair"

    test("fasta.gz - bam") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file("${projectDir}/assets/test-datasets/genomics/provirus/illumina/fasta/SAMEA3643048.fna.gz")
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    [
                        file("/workspaces/modules/.nf-test/tests/b9e55730919a2a80ba7dab72595ea208/work/74/1f51f7f03ef3fb03744d3d337c38a6/test.mgefinder.bam", checkIfExists: true),
                        file("/workspaces/modules/.nf-test/tests/b9e55730919a2a80ba7dab72595ea208/work/74/1f51f7f03ef3fb03744d3d337c38a6/test.mgefinder.bam.bai", checkIfExists: true)
                    ]
                ]
                input[2] = [
                    [ id:'test' ], // meta map
                    file("/workspaces/modules/.nf-test/tests/e6e970eb5d13f8271172fef712dd8976/work/6a/0cf4057df0b7ca08dddaea2f98a9c3/test.mgefinder.find", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - bam - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    []
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    []
                ]
                input[2] = [
                    [ id:'test' ], // meta map
                    []
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
