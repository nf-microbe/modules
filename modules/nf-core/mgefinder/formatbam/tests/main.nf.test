nextflow_process {

    name "Test Process MGEFINDER_FORMATBAM"
    script "../main.nf"
    process "MGEFINDER_FORMATBAM"

    tag "modules"
    tag "modules_nfcore"
    tag "mgefinder"
    tag "mgefinder/formatbam"

    test("bam") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file("/workspaces/modules/.nf-test/tests/dd0caa451f454f495f6763b30412274c/work/1f/292e248cc8ec577c729c6a46ac2dbf/test.bam", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("bam - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    []
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
