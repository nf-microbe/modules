nextflow_process {

    name "Test Process MGEFINDER_FIND"
    script "../main.nf"
    process "MGEFINDER_FIND"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "mgefinder"
    tag "mgefinder/formatbam"
    tag "mgefinder/find"

    test("fasta.gz - bam") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [
                        file("/workspaces/modules/.nf-test/tests/b9e55730919a2a80ba7dab72595ea208/work/74/1f51f7f03ef3fb03744d3d337c38a6/test.mgefinder.bam", checkIfExists: true),
                        file("/workspaces/modules/.nf-test/tests/b9e55730919a2a80ba7dab72595ea208/work/74/1f51f7f03ef3fb03744d3d337c38a6/test.mgefinder.bam.bai", checkIfExists: true)
                    ]
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("bam - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    []
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
