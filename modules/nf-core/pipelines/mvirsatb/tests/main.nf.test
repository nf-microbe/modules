nextflow_process {

    name "Test Process PIPELINES_MVIRSATB"
    script "../main.nf"
    process "PIPELINES_MVIRSATB"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "pipelines"
    tag "pipelines/mvirsatb"

    test("SAMN34082720") {
        when {
            process {
                """
                input[0] = Channel.of([
                    'SAMN34082720'
                ])
                input[1] = Channel.of([
                    'SRR24085752'
                ])
                input[2] = Channel.of([
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit_contigs.fa.gz", checkIfExists: true)
                ])
                input[3] = Channel.of([
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit.faa.gz", checkIfExists: true)
                ])
                input[4] = [
                    file("${projectDir}/assets/hmms/integrases/integrases.hmm", checkIfExists: true)
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.integrases,
                    process.out.summary,
                    process.out.versions,
                    ).match()
                }
            )
        }
    }

    test("SAMN34082720 + SAMEA3586081 + SAMN07141558") {
        when {
            process {
                """
                input[0] = Channel.of([
                    "SAMN34082720",
                    "SAMEA3586081",
                    "SAMN07141558"
                ])
                input[1] = Channel.of([
                    "SRR24085752",
                    "ERR1042924",
                    "SRR7211845"
                ])
                input[2] = Channel.of([
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit_contigs.fa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/ERR1042924_megahit_contigs.fa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR7211845_megahit_contigs.fa.gz", checkIfExists: true)
                ])
                input[3] = Channel.of([
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit.faa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/ERR1042924_megahit.faa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR7211845_megahit.faa.gz", checkIfExists: true)
                ])
                input[4] = Channel.of([
                    file("${projectDir}/assets/hmms/integrases/integrases.hmm", checkIfExists: true)
                ])
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.integrases,
                    process.out.summary,
                    process.out.versions,
                    ).match()
                }
            )
        }
    }

    test("SAMN34082720 + SAMEA3586081 - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = Channel.of([
                    "SAMN34082720",
                    "SAMEA3586081",
                    "SAMN07141558"
                ])
                input[1] = Channel.of([
                    "SRR24085752",
                    "ERR1042924",
                    "SRR7211845"
                ])
                input[2] = Channel.of([
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit_contigs.fa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/ERR1042924_megahit_contigs.fa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR7211845_megahit_contigs.fa.gz", checkIfExists: true)
                ])
                input[3] = Channel.of([
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit.faa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/ERR1042924_megahit.faa.gz", checkIfExists: true),
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR7211845_megahit.faa.gz", checkIfExists: true)
                ])
                input[4] = Channel.of([
                    file("${projectDir}/assets/hmms/integrases/integrases.hmm", checkIfExists: true)
                ])
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.integrases,
                    process.out.summary,
                    process.out.versions,
                    process.out.hmmer_tbl,
                    ).match()
                }
            )
        }
    }

}
