nextflow_process {

    name "Test Process PIPELINES_MVIRSATB"
    script "../main.nf"
    process "PIPELINES_MVIRSATB"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "pipelines"
    tag "pipelines/mvirsatb"

    test("SAMN34082720") {
        when {
            process {
                """
                input[0] = [
                    [ id:'SAMN34082720', run:'SRR24085752' ],
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit_contigs.fa.gz", checkIfExists: true)
                ]
                input[1] = [
                    [ id:'SAMN34082720', run:'SRR24085752' ],
                    file("${projectDir}/assets/test-datasets/pipelines/mvirsatb/SRR24085752_megahit.faa.gz", checkIfExists: true)
                ]
                input[2] = [
                    [ id:'SAMN34082720', run:'SRR24085752' ],
                    'SRR24085752'
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.integrases,
                    process.out.summary,
                    process.out.versions,
                    file(process.out.hmmer_tbl[0][1]).readLines()[0..7]
                    ).match()
                }
            )
        }
    }

