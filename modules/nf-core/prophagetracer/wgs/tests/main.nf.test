nextflow_process {

    name "Test Process PROPHAGETRACER_WGS"
    script "../main.nf"
    process "PROPHAGETRACER_WGS"

    test("fasta.gz - bam") {
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file("/mmfs1/gscratch/pedslabs_hoffman/carsonjm/CarsonJM/HoffLab-phageannotator/prophage_tracer_setup/NC_013967_1_genome.fasta.gz", checkIfExists: true) ]
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    [ file("/mmfs1/gscratch/pedslabs_hoffman/carsonjm/CarsonJM/HoffLab-phageannotator/prophage_tracer_setup/test.rmdup.bam", checkIfExists: true) ]
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("fasta.gz - bam - stub") {
        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    [ file("/mmfs1/gscratch/pedslabs_hoffman/carsonjm/CarsonJM/HoffLab-phageannotator/prophage_tracer_setup/NC_013967_1_genome.fasta.gz", checkIfExists: true) ]
                ]
                input[1] = [
                    [ id:'test' ], // meta map
                    [ file("/mmfs1/gscratch/pedslabs_hoffman/carsonjm/CarsonJM/HoffLab-phageannotator/prophage_tracer_setup/test.rmdup.bam", checkIfExists: true) ]
                ]
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}